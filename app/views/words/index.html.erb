<p id="notice"><%= notice %></p>

<h1>Listing Words</h1>

<table>
  <thead>
    <tr>
      <th>Language</th>
      <th>Category</th>
      <th>Word</th>
      <th>Meaning</th>
      <th>Ruby</th>
      <th>Pos</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @words.each do |word| %>
      <tr>
        <td><%= word.language_id %></td>
        <td><%= word.category_id %></td>
        <td><%= word.word %></td>
        <td><%= word.meaning %></td>
        <td><%= word.ruby %></td>
        <td><%= word.pos %></td>
        <td><%= link_to 'Show', word %></td>
        <td><%= link_to 'Edit', edit_word_path(word) %></td>
        <td><%= link_to 'Destroy', word, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

